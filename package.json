{
  "name": "@arnaud-barre/tsl-config",
  "description": "TS-React focused tsl configuration",
  "version": "0.1.2",
  "license": "MIT",
  "type": "module",
  "author": "Arnaud Barr√© (https://github.com/ArnaudBarre)",
  "private": true,
  "scripts": {
    "postinstall": "bun run build",
    "test": "node scripts/tests.ts",
    "build": "node scripts/bundle.ts && publint dist",
    "tsc": "tsl",
    "prettier": "prettier --write '**/*.{js,cjs,ts,json,md}'",
    "prettier-ci": "bun prettier --check",
    "ci": "bun run build && bun tsc && bun prettier-ci && bun run test",
    "release": "bun run ci && cd dist && bun publish"
  },
  "prettier": {
    "experimentalOperatorPosition": "start",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "peerDependencies": {
    "tsl": "^1.0.22",
    "typescript": "~5.9"
  },
  "devDependencies": {
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.2.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "prettier": "^3.6.2",
    "publint": "^0.3.12",
    "tsdown": "^0.14.2"
  }
}
